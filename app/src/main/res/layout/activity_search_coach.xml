<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cesare.leagueoflegendscoaching.Activities.SignUp">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

    <RelativeLayout
        android:id="@+id/relative_findCoach"
        android:layout_width="368dp"
        android:layout_height="503dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/findCoach_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:text="@string/findCoach"
            android:textAlignment="center"
            android:textSize="@dimen/title_text"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="38dp"
            style="@style/TitleStyle"/>

        <LinearLayout
            android:id="@+id/linear_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/findCoach_title"
            android:layout_marginTop="31dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding"
                    android:text="@string/name"
                    android:textSize="@dimen/label"
                    style="@style/LabelStyle"/>

                <EditText
                    android:id="@+id/name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@drawable/custom_edit_text"
                    android:textColor="@color/white"
                    android:textCursorDrawable="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/elo_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/elo_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding"
                    android:text="@string/elo"
                    android:textSize="@dimen/label"
                    style="@style/LabelStyle"/>

                <Spinner
                    android:id="@+id/elo_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@drawable/custom_spinner"
                    style="@style/SpinnerStyle"/>

            </LinearLayout>

            <TextView
                android:id="@+id/language_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"

                android:text="@string/language"
                android:textSize="@dimen/label"
                style="@style/LabelStyle"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <com.example.cesare.leagueoflegendscoaching.Classes.Components.ToggleImageButton
                    android:id="@+id/flag_UnitedKingdom_ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:background="@drawable/flag_button"

                    android:src="@mipmap/flag_unitedkingdom" />

                <com.example.cesare.leagueoflegendscoaching.Classes.Components.ToggleImageButton
                    android:id="@+id/flag_Italy_ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:background="@drawable/flag_button"

                    android:src="@mipmap/flag_italy" />

                <com.example.cesare.leagueoflegendscoaching.Classes.Components.ToggleImageButton
                    android:id="@+id/flag_Germany_ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:background="@drawable/flag_button"

                    android:src="@mipmap/flag_germany" />

                <com.example.cesare.leagueoflegendscoaching.Classes.Components.ToggleImageButton
                    android:id="@+id/flag_France_ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:background="@drawable/flag_button"
                    android:src="@mipmap/flag_france" />

                <com.example.cesare.leagueoflegendscoaching.Classes.Components.ToggleImageButton
                    android:id="@+id/flag_Spain_ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:background="@drawable/flag_button"

                    android:src="@mipmap/flag_spain" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/role_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/role_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding"
                    android:text="@string/role"
                    android:textSize="@dimen/label"
                    style="@style/LabelStyle"/>

                <Spinner
                    android:id="@+id/role_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@drawable/custom_spinner"
                    style="@style/SpinnerStyle"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/champions_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/champions_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/padding"
                    android:text="@string/champions"
                    android:textSize="@dimen/label"
                    style="@style/LabelStyle"/>

                <Spinner
                    android:id="@+id/champions1_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin"
                    android:background="@drawable/custom_spinner" />

                <Spinner
                    android:id="@+id/champions2_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin"
                    android:background="@drawable/custom_spinner"/>
                <Spinner
                    android:id="@+id/champions3_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin"
                    android:background="@drawable/custom_spinner"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cost_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:padding="@dimen/padding"
                    android:text="@string/maxCost"
                    android:textSize="@dimen/label"
                    style="@style/LabelStyle"/>

                <EditText
                    android:id="@+id/cost_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="0"
                    android:inputType="number"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@drawable/custom_edit_text"
                    android:textColor="@color/white"
                    android:textCursorDrawable="@color/white"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/findCoach_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentRight="true"
            android:layout_below="@id/linear_registration"
            android:layout_margin="@dimen/margin"
            android:text="@string/findCoach"
            android:textSize="@dimen/button_text"
            android:background="@drawable/custom_button"
            style="@style/ButtonStyle"/>

    </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>

