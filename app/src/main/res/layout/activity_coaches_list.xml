<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cesare.leagueoflegendscoaching.Activities.CoachesList">

    <RelativeLayout
        android:id="@+id/relative_coachesList"
        android:layout_width="368dp"
        android:layout_height="503dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/coachesList_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:text="@string/coachesList"
            android:textAlignment="center"
            android:textSize="@dimen/title_text"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="38dp" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/coachesList_title">
        </ListView>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
